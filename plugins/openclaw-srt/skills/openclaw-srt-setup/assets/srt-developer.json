{
  "$comment": "Developer-focused - GitHub, npm, crates, docs sites",
  "network": {
    "allowedDomains": [
      "api.anthropic.com",
      "api.telegram.org",

      "github.com",
      "*.github.com",
      "githubusercontent.com",
      "*.githubusercontent.com",
      "gitlab.com",
      "*.gitlab.com",

      "npmjs.com",
      "*.npmjs.com",
      "registry.npmjs.org",
      "yarnpkg.com",
      "*.yarnpkg.com",
      "crates.io",
      "*.crates.io",
      "pypi.org",
      "*.pypi.org",
      "pkg.go.dev",
      "*.pkg.go.dev",

      "docs.rs",
      "*.docs.rs",
      "doc.rust-lang.org",
      "*.doc.rust-lang.org",
      "docs.python.org",
      "*.docs.python.org",
      "nodejs.org",
      "*.nodejs.org",
      "developer.mozilla.org",
      "*.developer.mozilla.org",
      "devdocs.io",
      "*.devdocs.io",

      "stackoverflow.com",
      "*.stackoverflow.com",
      "stackexchange.com",
      "*.stackexchange.com",

      "rust-lang.org",
      "*.rust-lang.org",
      "python.org",
      "*.python.org",
      "golang.org",
      "*.golang.org",
      "typescriptlang.org",
      "*.typescriptlang.org"
    ],
    "deniedDomains": [],
    "allowLocalBinding": true
  },
  "filesystem": {
    "denyRead": [
      "~/.ssh",
      "~/.gnupg",
      "~/.aws",
      "~/.config/gcloud",
      "~/.azure",
      "~/Library/Keychains",
      "~/.local/share/keyrings",
      "~/.password-store",
      "~/.1password",
      "~/.kube",
      "~/.docker",
      "~/.npmrc",
      "~/.netrc",
      "~/.config/gh"
    ],
    "allowWrite": [
      "~/.openclaw",
      "/tmp",
      "/var/folders"
    ],
    "denyWrite": [
      "~/.bashrc",
      "~/.bash_profile",
      "~/.zshrc",
      "~/.zshenv",
      "~/.zprofile",
      "~/.profile",
      "~/.gitconfig",
      ".git/hooks"
    ]
  }
}
